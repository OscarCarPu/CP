#!/bin/bash

if [ -z "$1" ]; then
    echo "Error: No file provided. Usage: run <filename.rs>"
    exit 1
fi

if [[ "$1" != *.rs ]]; then
    echo "Error: '$1' does not appear to be a Rust file (missing .rs extension)."
    exit 1
fi

if [ ! -f "$1" ]; then
    echo "Error: File '$1' not found."
    exit 1
fi

base=$(basename "$1" .rs)
rustc "$1" -o "${base}.out" && ./"${base}.out"
